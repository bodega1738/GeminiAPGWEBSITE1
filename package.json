{
  "name": "maritime-crm",
  "version": "3.0.0",
  "type": "module",
  "packageManager": "bun",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run convex:dev\" \"npm run frontend:dev\"",
    "convex:dev": "convex dev",
    "frontend:dev": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "convex": "^1.16.0"
  },
  "dependencies": {
    "@convex-dev/better-auth": "^0.9.6",
    "@types/node": "^24.9.1",
    "better-auth": "1.3.27",
    "convex-helpers": "^0.1.104",
    "semver": "^7.7.3",
    "type-fest": "^5.1.0",
    "xstate": "^5.23.0"
  }
}
